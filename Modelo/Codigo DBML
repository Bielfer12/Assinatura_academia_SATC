Table Clientes {
  cd_cliente int [pk, increment]
  nm_cliente varchar (80)
  cpf varchar (11) [unique, not null]
  email varchar (80) 
  telefone varchar (11)
  dt_nascimento date
  endereco varchar(max)
  dt_cadastro datetime
}

Table Funcionarios {
  cd_funcionario int [pk, increment]
  nm_funcionario varchar (80)
  cpf varchar (11) [unique]
  email varchar (80) [unique]
  telefone varchar (11)
  cd_cargo int
  nm_cargo varchar (90)
  dt_admissao date
  dt_demissao date [null]
  dt_afastamento date [null]
  dt_retorno date [null]
}

Table Planos {
  cd_plano int [pk, increment]
  nm_plano varchar (80)
  descricao varchar(max)
  vl_preco decimal (32,2)
  tp_plano desc.tipo_p
}
enum desc.tipo_p{
  "BLACK"
  "GOLD"
  "STANDART"
}

Table Contratos {
  cd_contrato int [pk, increment]
  cd_funcionario int [ref: - Funcionarios.cd_funcionario]
  cd_cliente int [ref: > Clientes.cd_cliente]
  cd_plano int [ref: > Planos.cd_plano]

  dt_inicio date
  dt_fim date [null]
  status desc.status
}
enum desc.status{
  "ATIVO"
  "INATIVO"
  "PENDENTE"
}

Table Aulas {
  cd_aula int [pk, increment]
  nm_aula varchar
  descricao varchar(max)
  dt_inicio datetime
  dt_fim datetime
  cd_instrutor int [ref: > Funcionarios.cd_funcionario]
  capacidade int [null]
}

Table Controle_Acessos {
  cd_acesso int [pk, increment]
  cd_cliente int [ref: > Clientes.cd_cliente]
  dt_entrada datetime
  dt_saida datetime [null]
}

Table Pagamentos {
  cd_pagamento int [pk, increment]
  cd_contrato int [ref: > Contratos.cd_contrato]
  valor_pago decimal (32,2) 
  metodo_pag desc.pagamento
}
Enum desc.pagamento {
 "DINHEIRO"
 "PIX"
 "CREDITO"
 "DEBITO"
}

Table Agendas {
  cd_agenda int [pk, increment]
  cd_aula int [ref: > Aulas.cd_aula]
  nm_aula varchar(30)
  cd_aluno int [ref: > Clientes.cd_cliente]
  cd_instrutor int [ref: > Aulas.cd_instrutor]
  dias_semana desc.dia_semana 


}

Enum desc.dia_semana {
 "SEGUNDA"
 "TERÃ‡A"
 "QUARTA"
 "QUINTA"
 "SEXTA"
 "SABADO"
 "DOMINGO"
}